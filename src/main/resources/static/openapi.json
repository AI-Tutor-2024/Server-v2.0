  "components": {
    "schemas": {
      "FolderCreateReq": {
        "type": "object",
        "properties": {
          "folderName": {
            "type": "string",
            "description": "폴더 이름"
          },
            "professorName": {
                "type": "string",
                "description": "교수자 이름"
            }
        },
        "required": ["folderName", "professorName"]
      },
      "FolderUpdateReq": {
        "type": "object",
        "properties": {
          "folderName": {
            "type": "string",
            "description": "폴더 이름"
          },
          "professor": {
            "type": "string",
            "description": "교수자 이름"
          }
        },
        "required": ["folderName", "professor"]
      },
      "FolderListRes": {
        "type": "object",
        "properties": {
          "folderId": {
            "type": "Long",
            "example": 1,
            "description": "폴더의 id입니다."
          },
            "folderName": {
                "type": "string",
                "example": "폴더 이름",
                "description": "폴더의 이름입니다."
            },
            "professor": {
                "type": "string",
                "example": "교수자 이름",
                "description": "교수자의 이름입니다."
            }
        },
        "required": ["folderId", "folderName", "professor"]
      },
      "FolderNameListRes": {
        "type": "object",
        "properties": {
          "folderId": {
            "type": "Long",
            "example": 1,
            "description": "폴더의 id입니다."
          },
            "folderName": {
                "type": "string",
                "example": "폴더 이름",
                "description": "폴더의 이름입니다."
            }
        },
        "required": ["folderId", "folderName"]
      },
      "NoteCreateReq": {
        "type": "object",
        "properties": {
          "noteName": {
            "type": "string",
            "description": "노트 제목"
          }
        },
        "required": ["noteName"]
      },
      "NoteListRes": {
        "type": "object",
        "properties": {
          "folderName": {
            "type": "string",
            "example": "폴더명",
            "description": "교수자가 생성한 폴더 이름"
          },
          "professor": {
            "type": "string",
            "example": "하석재",
            "description": "교수자 이름"
          },
          "noteListDetailRes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/NoteDetailRes"
            },
            "description": "노트 목록의 정보입니다. NoteDetailRes를 확인해주세요."
          }
        }
      },
      "NoteDetailRes": {
        "type": "object",
        "properties": {
          "noteId": {
            "type": "Long",
            "example": 1,
            "description": "노트의 id입니다."
          },
          "title": {
            "type": "string",
            "example": "노트 제목",
            "description": "노트의 이름입니다."
          },
          "createdAt": {
            "type": "LocalDate",
            "format": "date",
            "example": "2024-04-26",
            "description": "노트의 생성 시간입니다."
          },
          "practiceSize": {
            "type": "int",
            "example": 10,
            "description": "노트에 포함된 문제의 개수입니다."
          },
          "code": {
            "type": "string",
            "example": "9E79JE",
            "description": "노트의 코드입니다."
          }
        },
        "required": ["noteId", "title", "createdAt", "practiceSize", "code"]
      },
      "CreatePracticeReq": {
        "type": "object",
        "properties": {
          "practiceSize": {
            "type": "integer",
            "description": "생성할 문제의 개수"
          },
          "type": {
            "type": "string",
            "description": "문제 유형 (OX, SHORT)"
          },
          "keywords": {
            "type": "string",
            "description": "문제 생성을 위한 키워드"
          },
          "requirement": {
            "type": "string",
            "description": "문제 생성 시 고려할 요구사항"
          }
        },
        "required": ["type", "practiceSize"]
      },
      "FolderInfoRes": {
        "type": "object",
        "properties": {
          "folderName": {
            "type": "string",
            "example": "폴더명",
            "description": "교수자가 생성한 폴더 이름"
          },
          "professor": {
            "type": "string",
            "example": "하석재",
            "description": "교수자 이름"
          }
        }
      },
      "CreatePracticeRes": {
        "type": "object",
        "properties": {
          "practiceNumber": {
            "type": "integer",
            "example": 1,
            "description": "문제의 번호입니다."
          },
          "content": {
            "type": "string",
            "example": "광복절의 중앙경축식은 매년 서울에서만 거행된다.",
            "description": "문제의 내용입니다."
          },
          "result": {
            "type": "string",
            "example": "X",
            "description": "문제의 답안입니다. OX문제의 경우 O 또는 X, 객관식 문제의 경우 A, B, C, D입니다."
          },
          "solution": {
            "type": "string",
            "example": "요약문에 따르면 중앙경축식은 서울에서 거행되고, 지방경축행사는 각 시·도 단위별로 거행된다.",
            "description": "문제의 해설입니다."
          },
          "practiceType": {
            "type": "string",
            "example": "OX",
            "description": "문제의 타입입니다. OX, MULTIPLE"
          }
        }
      },
      "CreatePracticeListRes": {
        "type": "object",
        "properties": {
          "practiceResList": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreatePracticeRes"
            }
          },
          "summary": {
            "type": "string",
            "description": "생성된 문제의 요약"
          }
        }
      },
      "SavePracticeListReq": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/SavePracticeReq"
        }
      },
      "SavePracticeReq": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string",
            "description": "문제 내용"
          },
          "answer": {
            "type": "string",
            "description": "문제의 정답"
          }
        }
      },
      "ProfessorPracticeListRes": {
        "type": "object",
        "properties": {
          "minute": {
            "type": "integer",
            "example": 60,
            "description": "문제의 제한 시간 중 분을 의미합니다."
          },
          "second": {
            "type": "integer",
            "example": 59,
            "description": "문제의 제한 시간 중 초를 의미합니다."
          },
          "endDate": {
            "type": "string",
            "format": "date-time",
            "example": "2024-08-16T21:04:51",
            "description": "문제의 마감 시간입니다."
          },
          "reqList": {
