{
  "openapi": "3.0.1",
  "info": {
    "title": "AI Tutor API",
    "version": "1.0.0",
    "description": "AI Tutor 프로젝트의 OpenAPI 문서입니다. 여기에는 새롭게 추가된 API들이 포함되어 있습니다."
  },
  "servers": [
    {
      "url": "http://localhost:8080/api/v1",
      "description": "spring 서버"
    }
  ],
  "tags": [
    {
      "name" : "Practice",
      "description": "문제 생성"
    }
  ],

  "paths": {
    "/professor/practice": {
      "post": {
        "tags": ["Practice"],
        "summary": "문제 생성",
        "description": "파일과 문제 유형, 문제 개수를 기반으로 문제를 생성합니다.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/CreatePracticeReq"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "문제 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatePracticeRes"
                }
              }
            }
          },
          "400": {
            "description": "생성 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreatePracticeReq": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "문제 유형 (OX, SHORT)"
          },
          "practiceSize": {
            "type": "integer",
            "description": "생성할 문제의 개수"
          },
          "keywords": {
            "type": "string",
            "description": "문제 생성을 위한 키워드"
          },
          "requirement": {
            "type": "string",
            "description": "문제 생성 시 고려할 요구사항"
          }
        },
        "required": ["type", "practiceSize"]
      },
      "CreatePracticeRes": {
        "type": "object",
        "properties": {
          "practiceResList": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PracticeRes"
            }
          },
          "summary": {
            "type": "string",
            "description": "생성된 문제의 요약"
          }
        }
      },
      "PracticeRes": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string",
            "description": "문제 내용"
          },
          "answer": {
            "type": "string",
            "description": "문제의 정답"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "description": "에러 발생 시간"
          },
          "message": {
            "type": "string",
            "description": "에러 메시지"
          },
          "code": {
            "type": "string",
            "description": "에러 코드"
          },
          "status": {
            "type": "integer",
            "description": "HTTP 상태 코드"
          }
        }
      }
    }
  }
}
