        "parameters": [
          {
            "name": "noteId",
            "in": "path",
            "required": true,
            "description": "note의 id를 입력해주세요",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SavePracticeListReq"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "생성 성공",
