    "/professor/practice": {
      "post": {
        "tags": ["Practice"],
        "summary": "문제 생성",
        "description": "파일과 문제 유형, 문제 개수를 기반으로 문제를 생성합니다.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/CreatePracticeReq"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "문제 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatePracticeListRes"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
            "500": {
                "description": "서버 오류",
                "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
                }
            }
        }
      }
    },
    "/professor/practice/{noteId}": {
      "post": {
        "tags": ["Practice"],
        "summary": "문제 저장",
